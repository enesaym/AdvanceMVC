<!doctype html>
@model EmployeeRegisterDTO
<html lang="en">
@{
	Layout = null;
}
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Modernize Free</title>
	<link rel="shortcut icon" type="image/png" href="~/Modernize/src/assets/images/logos/favicon.png" />
	<link rel="stylesheet" href="~/Modernize/src/assets/css/styles.min.css" />

</head>

<body>
	<!--  Body Wrapper -->
	<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
		 data-sidebar-position="fixed" data-header-position="fixed">
		<div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
			<div class="d-flex align-items-center justify-content-center w-100">
				<div class="row justify-content-center w-100">
					<div class="col-md-8 col-lg-6 col-xxl-3">
						<div class="card mb-0">
							<div class="card-body">
								<a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
									<img src="~/Modernize/src/assets/images/logos/dark-logo.svg" width="180" alt="">
								</a>
								<p class="text-center">Your Social Campaigns</p>
								<form asp-action="Register" asp-controller="Auth">
									<div class="mb-3">
										<label for="exampleInputtext1" class="form-label">Ad</label>
										<input asp-for="Name" type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp">
									</div>
									<div class="mb-3">
										<label for="exampleInputEmail1" class="form-label">Email </label>
										<input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
									</div>
									<div class="mb-3">
										<label for="businessUnitSelect" class="form-label">Business Unit</label>
										<select class="form-select" id="businessUnitSelect">
											<option value="">Choose Business Unit</option>
											@foreach (var unit in ViewBag.BusinessUnits)
											{
												<option value="@unit.ID">@unit.BusinessUnitName</option>
											}
										</select>
									</div>
									<div class="mb-3">
										<label for="titleSelect" class="form-label">Title</label>
										<select class="form-select" id="titleSelect">
											<option value="">Choose Title</option>
											@foreach (var title in ViewBag.Titles)
											{
												<option value="@title.ID">@title.TitleName</option>
											}
										</select>
									</div>
									<div class="mb-4">
										<label for="exampleInputPassword1" class="form-label">Şifre</label>
										<input type="password" class="form-control" id="exampleInputPassword1">
									</div>
									<input class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Kayıt Ol</input>
									<div class="d-flex align-items-center justify-content-center">
										<p class="fs-4 mb-0 fw-bold">Hesabınız var mı?</p>
										<a class="text-primary fw-bold ms-2" href="@Url.Action("Login", "Auth")">Giriş Yap </a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="../assets/libs/jquery/dist/jquery.min.js"></script>
	<script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>